<?xml version="1.0"?>


<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <!-- CHASSIS LINK -->
    <link name="chassis">
        <visual>
            <origin xyz="0.25 0.0 0.1"/>
            <geometry>
                <box size="0.5 0.3 0.2"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.25 0.0 0.1"/>
            <geometry>
                <box size="0.5 0.3 0.2"/>
            </geometry>
        </collision>
    </link>

    <!-- LEFT WHEELS LINK -->

    <!-- Rear -->
    <joint name="left_wheel_rear_joint" type="continuous">
        <parent link="chassis"/>
        <child link="left_wheel_rear"/>
        <origin xyz="0.0 0.175 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="left_wheel_rear">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
    </link>

    <!-- middle -->
    <joint name="left_wheel_middle_joint" type="continuous">
        <parent link="chassis"/>
        <child link="left_wheel_middle"/>
        <origin xyz="0.25 0.175 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="left_wheel_middle">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
    </link>


    <!-- front -->
    <joint name="left_wheel_front_joint" type="continuous">
        <parent link="chassis"/>
        <child link="left_wheel_front"/>
        <origin xyz="0.5 0.175 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="left_wheel_front">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
    </link>
    <!-- right WHEELS LINK -->

    <!-- Rear -->
    <joint name="right_wheel_rear_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel_rear"/>
        <origin xyz="0.0 -0.175 0.0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <link name="right_wheel_rear">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
    </link>

    <!-- middle -->
    <joint name="right_wheel_middle_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel_middle"/>
        <origin xyz="0.25 -0.175 0.0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <link name="right_wheel_middle">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
    </link>


    <!-- front -->
    <joint name="right_wheel_front_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel_front"/>
        <origin xyz="0.5 -0.175 0.0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <link name="right_wheel_front">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
    </link>
</robot>